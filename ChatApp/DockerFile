FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file and restore dependencies
COPY ["ChatClient/ChatClient.csproj", "ChatClient/"]
RUN dotnet restore "ChatClient/ChatClient.csproj"

# Copy entire project
COPY . .
WORKDIR "/src/ChatClient"

# Build the project
RUN dotnet build "ChatClient.csproj" -c Release -o /app/build

# Publish the project
FROM build AS publish
RUN dotnet publish "ChatClient.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final stage - use appropriate runtime
FROM mcr.microsoft.com/dotnet/runtime:8.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ChatClient.dll"]